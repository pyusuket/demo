<%= form_with(url: fhir_patients_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :family %>
    <%= form.text_field :family %>
  </div>
  <div class="field">
    <%= form.label :given %>
    <%= form.text_field :given %>
  </div>
  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, options_for_select(['male', 'female', 'other']) %>
  </div>
  <%= form.submit "Create Patient" %>
<% end %>
